<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/chapterDesFram"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:clickable="true"
        android:background="#f5f5f5"
        android:visibility="invisible">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/mainrelative"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/linearmain"
                android:background="#eeeeee"
                android:padding="07dp">

                <RelativeLayout
                    android:id="@+id/familyRelative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/txtWikipedia">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="21dp"
                        android:layout_marginStart="21dp"
                        android:text="FAMILY"
                        android:textColor="@color/PrimarytxtColor"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtFamilyName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/textView5"
                        android:layout_below="@+id/textView5"
                        android:layout_marginTop="03dp"
                        android:text="-"
                        android:textColor="@color/SecondarytxtColor"
                        android:textSize="@dimen/fontlightSize" />

                    <View
                        android:id="@+id/view1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/txtFamilyName"
                        android:layout_marginBottom="03dp"
                        android:layout_marginTop="10dp"
                        android:background="#E0E0E0"></View>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/typerelative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/familyRelative">

                    <TextView
                        android:id="@+id/texttypetxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="21dp"
                        android:layout_marginStart="21dp"
                        android:text="TYPE"
                        android:textColor="@color/PrimarytxtColor"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txttype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/texttypetxt"
                        android:layout_below="@+id/texttypetxt"
                        android:layout_marginTop="03dp"
                        android:text="-"
                        android:textColor="@color/SecondarytxtColor"
                        android:textSize="@dimen/fontlightSize" />

                    <View
                        android:id="@+id/viewtype"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/txttype"
                        android:layout_marginBottom="03dp"
                        android:layout_marginTop="10dp"
                        android:background="#E0E0E0"></View>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/othernamerelative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/typerelative"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/txtoth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="21dp"
                        android:layout_marginStart="21dp"
                        android:text="OTHER NAME"
                        android:textColor="@color/PrimarytxtColor"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtothername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/txtoth"
                        android:layout_below="@+id/txtoth"
                        android:layout_marginTop="03dp"
                        android:text="-"
                        android:textColor="@color/SecondarytxtColor"
                        android:textSize="@dimen/fontlightSize" />

                    <View
                        android:id="@+id/view8"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/txtothername"
                        android:layout_marginBottom="03dp"
                        android:layout_marginTop="10dp"
                        android:background="#E0E0E0"></View>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rowsrelative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/othernamerelative">

                    <TextView
                        android:id="@+id/txtrowstxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="21dp"
                        android:layout_marginStart="21dp"
                        android:text="ROWS"
                        android:textColor="@color/PrimarytxtColor"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtrows"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/txtrowstxt"
                        android:layout_below="@+id/txtrowstxt"
                        android:layout_marginTop="03dp"
                        android:text="-"
                        android:textColor="@color/SecondarytxtColor"
                        android:textSize="@dimen/fontlightSize" />

                    <View
                        android:id="@+id/viewrows"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/txtrows"
                        android:layout_marginBottom="03dp"
                        android:layout_marginTop="10dp"
                        android:background="#E0E0E0"></View>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/colorrelative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rowsrelative"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="21dp"
                        android:layout_marginStart="21dp"
                        android:text="COLOUR"
                        android:textColor="@color/PrimarytxtColor"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/text2"
                        android:layout_below="@+id/text2"
                        android:layout_marginTop="03dp"
                        android:text="-"
                        android:textColor="@color/SecondarytxtColor"
                        android:textSize="@dimen/fontlightSize" />

                    <View
                        android:id="@+id/view2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/txtColor"
                        android:layout_marginBottom="03dp"
                        android:layout_marginTop="10dp"
                        android:background="#E0E0E0"></View>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/petalrelative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/colorrelative"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/txt3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="21dp"
                        android:layout_marginStart="21dp"
                        android:text="PETALS"
                        android:textColor="@color/PrimarytxtColor"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/txtpetals"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/txt3"
                        android:layout_below="@+id/txt3"
                        android:layout_marginTop="03dp"
                        android:text="-"
                        android:textColor="@color/SecondarytxtColor"
                        android:textSize="@dimen/fontlightSize" />

                    <View
                        android:id="@+id/view3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/txtpetals"
                        android:layout_marginBottom="03dp"
                        android:layout_marginTop="010dp"
                        android:background="#E0E0E0"></View>


                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/sizerelative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/petalrelative"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/txt4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="21dp"
                        android:layout_marginStart="21dp"
                        android:text="SIZE"
                        android:textColor="@color/PrimarytxtColor"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/txtsize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/txt4"
                        android:layout_below="@+id/txt4"
                        android:layout_marginTop="03dp"
                        android:text="-"
                        android:textColor="@color/SecondarytxtColor"
                        android:textSize="@dimen/fontlightSize" />


                    <View
                        android:id="@+id/view4"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/txtsize"
                        android:layout_marginBottom="03dp"
                        android:layout_marginTop="10dp"
                        android:background="#E0E0E0"></View>
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/cultivationrelative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sizerelative"
                    android:layout_marginTop="10dp">


                    <TextView
                        android:id="@+id/txt5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="21dp"
                        android:layout_marginStart="21dp"
                        android:text="DISTRIBUTION"
                        android:textColor="@color/PrimarytxtColor"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtCultivation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/txt5"
                        android:layout_below="@+id/txt5"
                        android:layout_marginTop="03dp"
                        android:text="-"
                        android:textColor="@color/SecondarytxtColor"
                        android:textSize="@dimen/fontlightSize" />


                    <View
                        android:id="@+id/view5"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/txtCultivation"
                        android:layout_marginBottom="03dp"
                        android:layout_marginTop="10dp"
                        android:background="#E0E0E0"></View>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/climaterelative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cultivationrelative"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/txt6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="21dp"
                        android:layout_marginStart="21dp"
                        android:text="CLIMATE"
                        android:textColor="@color/PrimarytxtColor"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtclimate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/txt6"
                        android:layout_below="@+id/txt6"
                        android:layout_marginBottom="03dp"
                        android:layout_marginTop="03dp"
                        android:text="-"
                        android:textColor="@color/SecondarytxtColor"
                        android:textSize="@dimen/fontlightSize" />

                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>

    <com.github.ksoichiro.android.observablescrollview.ObservableListView
        android:id="@+id/list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:animationCache="false"
        android:background="@color/feed_bg"
        android:clipToPadding="false"
        android:divider="@null"
        android:paddingBottom="50dp"
        android:scrollingCache="false" />

    <ProgressBar
        android:id="@+id/progressBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:visibility="invisible" />

    <FrameLayout
        android:id="@+id/NxtPrv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:animateLayoutChanges="false">

        <LinearLayout
            android:id="@+id/ll_action_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#66000000"
            android:divider="@drawable/ic_img_line_v"
            android:dividerPadding="16dp"
            android:showDividers="middle">

            <TextView
                android:id="@+id/btnprev"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="16dp"
                android:text="@string/Prev"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/btnnext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="16dp"
                android:text="@string/next"
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </LinearLayout>
    </FrameLayout>

</RelativeLayout>